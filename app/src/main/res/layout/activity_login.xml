<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.view.LoginActivity"
    android:backgroundTint="@color/colorBranco"
    android:background="@color/colorBranco">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/ajudaai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/loginmulher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">




        <EditText
            android:id="@+id/edEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/colorPreto"
            android:hint="Email"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:background="@drawable/borda_arrendondados"
            android:backgroundTint="@color/colorCinza"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_til"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            app:counterEnabled="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/colorCinza"
            app:passwordToggleEnabled="true"
            android:layout_marginBottom="10dp">


            <EditText
                android:id="@+id/edSenhaLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/borda_arrendondados"
                android:backgroundTint="@color/colorCinza"
                android:paddingStart="10dp"
                android:ems="13"
                android:hint="Senha"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnButtonLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Login"
            android:textColor="@color/colorBranco"
            android:background="@drawable/borda_arrendondados"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="Ou se preferir"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btnLoginSIGAA"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/borda_arrendondados"
            android:backgroundTint="@color/colorCinza"
            android:text="Entrar com SIGAA"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPreto" />




        <TextView
            android:id="@+id/txtCriarConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Ainda nÃ£o tem conta ? Crie uma aqui."
            android:textColor="@color/colorAzul" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
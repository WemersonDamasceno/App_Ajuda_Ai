<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Pagina_Inicial_Activity"
    android:backgroundTint="@color/colorBranco"
    android:background="@color/colorBranco">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tollbarPagInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAzul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tollbarPagInicial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:background="@color/colorAzul"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_home"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_procurar"
                android:layout_marginStart="50dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_notificacoes"
                android:layout_marginStart="50dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_perfil"
                android:layout_marginStart="50dp"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tollbarPagInicial"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPerfilLista"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/loginapp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imgPerfilLista"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Poste sua duvida aqui:"
                android:textSize="17sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListPostagens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imgPerfilLista">
            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>